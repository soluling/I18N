<Window
  x:Class="Pages.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Sample" 
  Height="200" 
  Width="400">
  
  <DockPanel LastChildFill="True">
    <Label DockPanel.Dock="Top"><Bold>Sample text</Bold></Label>
    
    <DockPanel DockPanel.Dock="Bottom">
      <Label DockPanel.Dock="Right">Written in 2014</Label>
      <Button DockPanel.Dock="Left" Width="100" HorizontalAlignment="Left" Click="Button_Click">Move</Button>
    </DockPanel>

    <Frame x:Name="frame" Source="Page1.xaml" />
  </DockPanel>
</Window>
