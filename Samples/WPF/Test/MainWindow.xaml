<Window 
  x:Class="Test.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Sample" Height="350" Width="525">
  
  <StackPanel>
    <Label x:Name="label1">One</Label>
    <Label x:Name="label2">Two</Label>
    <Button x:Name="button5">Three</Button>
    
    <StackPanel x:Name="panel1" Orientation="Horizontal">
      <Label x:Name="label3">One</Label>
      <Label x:Name="label4">Two</Label>
      <Button x:Name="button4">Three</Button>
    </StackPanel>
    
    <StackPanel x:Name="panel2" Orientation="Horizontal">
      <Button x:Name="button1" Click="button1_Click">One</Button>
      <Button x:Name="button2" Click="button2_Click">Two</Button>
      <Button x:Name="button3" Click="button3_Click">Three</Button>
    </StackPanel>
  </StackPanel>
</Window>
