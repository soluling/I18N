<Window 
  x:Class="Dialogs.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Dialog Sample" 
  MinWidth="300" 
  SizeToContent="WidthAndHeight">
  
  <StackPanel>
    <StackPanel.Resources>
      <Style TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="8,4,8,4"/>
      </Style>
    </StackPanel.Resources>

    <Button Name="openDialog" Click="openDialog_Click" Margin="8,8,8,4">Open file</Button>
    <Button Name="saveDialog" Click="saveDialog_Click">Save file</Button>
    
    <Button Name="openDialogWinForms" Click="openDialogWinForms_Click" >Open file, Windows Forms version</Button>
    <Button Name="saveDialogWinForms" Click="saveDialogWinForms_Click">Save file, Windows Forms version</Button>

    <Button Name="folderDialog" Click="folderDialog_Click" Margin="8,4,8,8">Select folder</Button>
  </StackPanel>
</Window>
