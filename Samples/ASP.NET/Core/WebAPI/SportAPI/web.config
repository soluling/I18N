<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.web>
      <customErrors mode="Off" />
    </system.web>
    <system.webServer>
      <httpErrors errorMode="Detailed" />
      <security>
        <requestFiltering>
          <!-- Measured in Bytes -> 2 GB -->
          <requestLimits maxAllowedContentLength="2000000000" />
        </requestFiltering>
      </security>
      <!-- Remove this
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      -->
      <!-- Make sure this is
      <aspNetCore processPath="dotnet" arguments=".\SportApi.dll" stdoutLogEnabled="false" stdoutLogFile="\\?\%home%\LogFiles\stdout" hostingModel="OutOfProcess" />
      -->
      <aspNetCore processPath="dotnet" arguments=".\SportApi.dll" stdoutLogEnabled="false" stdoutLogFile="\\?\%home%\LogFiles\stdout" hostingModel="InProcess" />
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
    </system.webServer>
  </location>
</configuration>